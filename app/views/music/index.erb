<h1>Mango Jukebox</h1>
<hr/>

<% @music.each do |song| %>
  <div class="row">
    <div class="music col-sm-4 col-xs-6">
      <h3><a href="/music/<%= song.id %>"><%= song.song_title %></a></h3>
    </div>
    <div class="col-sm-4 col-xs-6">
      <small>(by: <%= song.author %>)</small>
    </div>
    <div class="col-sm-4 col-xs-6">
      <p><a href="<%= song.url %>"><%= song.url %></a></p>
    </div>
  </div>
<% end %>
<a href="/music/new">Post a song... It's FREE (for now)!</a>